@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}


<div class="row">

    <div class="col-4 offset-4">

        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>

    </div>
</div>

<div class="row">

    <div class="col-4 offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post">
            <div class="form-group text-center mb-3">
                <label asp-for="Username" class="form-label "><i class="fa-solid fa-user me-2"></i>UserName</label>
                <input asp-for="Username" class="form-control rounded-pill" placeholder="Name" />
                <span asp-validation-for="Username" class=" text-danger small "></span>
            </div>
            <div class="form-group text-center mb-3">
                <label asp-for="Password" class="form-label"><i class="fa-solid fa-lock me-2"></i>Password</label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Pass" />
                <span asp-validation-for="Password" class=" text-danger small "></span>
            </div>
            <div class="form-group text-center mb-3">
                <label asp-for="RePassword" class="form-label"><i class="fa-solid fa-lock me-2"></i>Re-Password</label>
                <input asp-for="RePassword" type="password" class="form-control rounded-pill" placeholder="R-Pass" />
                <span asp-validation-for="RePassword" class=" text-danger small "></span>
            </div>
          
            <div class="form-group text-center  mb-3  d-grid">
                <button type="submit" class="btn btn-primary d-bloc rounded-pill"><i class="fa-solid fa-user-plus me-2"></i>Register</button>
            </div>
        </form>

    </div>
</div>